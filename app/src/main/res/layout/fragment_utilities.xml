<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_utilities_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/utilities_who_RelLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/frg_utilities_what_v"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="@android:color/darker_gray"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/frg_utilities_what_txtv"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_alignBottom="@+id/frg_utilities_what_v"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Utility managed by" />

                <AutoCompleteTextView
                    android:id="@+id/frg_utilities_what_actxtv"
                    android:layout_width="645dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/frg_utilities_what_txtv"
                    android:hint="e.g.: Catalin" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>